{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest",
    "check-types": "tsc --noEmit -p tsconfig.json",
    "typeorm": "typeorm-ts-node-commonjs -d src/config/typeorm.data-source.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "migration:generate": "typeorm-ts-node-commonjs -d src/config/typeorm.data-source.ts migration:generate",
    "migration:run": "typeorm-ts-node-commonjs -d src/config/typeorm.data-source.ts migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d src/config/typeorm.data-source.ts migration:revert",
    "migration:show": "typeorm-ts-node-commonjs -d src/config/typeorm.data-source.ts migration:show",
    "seed": "ts-node src/scripts/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.2",
    "dotenv": "^17.2.3",
    "mysql2": "^3.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.8",
    "@nestjs/schematics": "^10.1.2",
    "@nestjs/testing": "^10.4.15",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.9.4",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
