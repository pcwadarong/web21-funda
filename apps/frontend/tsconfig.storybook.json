{
  "extends": "@repo/typescript-config/frontend.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.storybook.tsbuildinfo",
    "composite": true,
    "incremental": true,
    "jsxImportSource": "@emotion/react",
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/comp/*": ["src/components/*"],
      "@/feat/*": ["src/features/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [".storybook/**/*", "src/**/*"]
}
